<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_cuisine_background">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round"
        android:text="Cuisine"
        android:fontFamily="@font/adamina"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.TextView"
        android:textColor="@color/black"
        android:gravity="center"
        android:elevation="7dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/georgian_button_background"
            android:textOff="Georgian"
            android:textOn="Georgian"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/indian_button_background"
            android:textOff="Indian"
            android:textOn="Indian"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/japanese_button_background"
            android:textOff="Japanese"
            android:textOn="Japanese"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/armenian_button_background"
            android:textOff="Armenian"
            android:textOn="Armenian"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/american_button_background"
            android:textOff="American"
            android:textOn="American"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/australian_button_background"
            android:textOff="Australian"
            android:textOn="Australian"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/arabic_button_background"
            android:textOff="Arabic"
            android:textOn="Arabic"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/brazilian_buttton_background"
            android:textOff="Brazilian"
            android:textOn="Brazilian"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/chinese_button_background"
            android:textOff="Chinese"
            android:textOn="Chinese"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/mexican_button_background"
            android:textOff="Mexican"
            android:textOn="mexican"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
