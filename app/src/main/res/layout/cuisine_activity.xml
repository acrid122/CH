            android:background="@drawable/european_button_background"
            android:textOff="European"
            android:textOn="European"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/scandinavian_button_background"
            android:textOff="Nordic"
            android:textOn="Nordic"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>
        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/vietnamise_button_background"
            android:textOff="Vietnamise"
            android:textOn="Vietnamise"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:background="@drawable/russian_button_background"
            android:textOff="Russian"
            android:textOn="Russian"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            android:textSize="13sp"/>

    </LinearLayout>





</LinearLayout>




