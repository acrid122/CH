<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_cuisine_background">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round"
        android:text="Cuisine"
        android:fontFamily="@font/adamina"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.TextView"
        android:textColor="@color/black"
        android:gravity="center"
        android:elevation="7dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="20dp">

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="105dp"
            android:background="@drawable/georgian_icon_pressed"
            android:textOff="Georgian"
            android:textOn="Georgian"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"/>
        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="105dp"
            android:background="@drawable/indian_icon_pressed"
            android:textOff=""
            android:textOn=""
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/archivo_black"/>

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="105dp"
            android:background="@drawable/japanese_icon_pressed"
            android:textOff="Japanese"
            android:textOn=""
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/adamina"/>

    </LinearLayout>






</LinearLayout>




